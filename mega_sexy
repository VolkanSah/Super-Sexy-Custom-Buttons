// Customizer-Einstellungen registrieren
function sscb_register_customizer_settings($wp_customize) {
    // Sektion umbenennen zu "Super Sexy"
    $wp_customize->add_section('sscb_button_section', array(
        'title' => __('Super Sexy Buttons', 'sscb-plugin'),
        'description' => __('Customize the appearance of your super sexy buttons.', 'sscb-plugin'),
        'priority' => 30,
    ));

    // Hintergrundfarbe mit Transparenz hinzufÃ¼gen
    $wp_customize->add_setting('sscb_button_background_color', array(
        'default' => '#ffd700', // Dein Bling-Bling-Gold ohne Transparenz
        'sanitize_callback' => 'sanitize_hex_color',
    ));

    $wp_customize->add_control(
        new WP_Customize_Color_Control(
            $wp_customize,
            'sscb_button_background_color',
            array(
                'label' => __('Button Background Color', 'sscb-plugin'),
                'section' => 'sscb_button_section',
                'settings' => 'sscb_button_background_color',
                'description' => 'Choose the background color.',
            )
        )
    );

    // Transparenz fÃ¼r Hintergrundfarbe
    $wp_customize->add_setting('sscb_button_background_opacity', array(
        'default' => 1,
        'sanitize_callback' => 'sscb_sanitize_opacity',
    ));

    $wp_customize->add_control('sscb_button_background_opacity', array(
        'label' => __('Button Background Opacity', 'sscb-plugin'),
        'section' => 'sscb_button_section',
        'type' => 'range',
        'input_attrs' => array(
            'min' => 0,
            'max' => 1,
            'step' => 0.1,
        ),
    ));

    // Hover Hintergrundfarbe mit Transparenz hinzufÃ¼gen
    $wp_customize->add_setting('sscb_button_hover_background_color', array(
        'default' => '#e55a4f', // Standard Hover-Farbe ohne Transparenz
        'sanitize_callback' => 'sanitize_hex_color',
    ));

    $wp_customize->add_control(
        new WP_Customize_Color_Control(
            $wp_customize,
            'sscb_button_hover_background_color',
            array(
                'label' => __('Button Hover Background Color', 'sscb-plugin'),
                'section' => 'sscb_button_section',
                'settings' => 'sscb_button_hover_background_color',
                'description' => 'Choose the hover background color.',
            )
        )
    );

    // Transparenz fÃ¼r Hover-Hintergrundfarbe
    $wp_customize->add_setting('sscb_button_hover_opacity', array(
        'default' => 1,
        'sanitize_callback' => 'sscb_sanitize_opacity',
    ));

    $wp_customize->add_control('sscb_button_hover_opacity', array(
        'label' => __('Button Hover Background Opacity', 'sscb-plugin'),
        'section' => 'sscb_button_section',
        'type' => 'range',
        'input_attrs' => array(
            'min' => 0,
            'max' => 1,
            'step' => 0.1,
        ),
    ));

    // Border Radius Schieberegler hinzufÃ¼gen
    $wp_customize->add_setting('sscb_button_border_radius', array(
        'default' => '9',
        'sanitize_callback' => 'absint',
    ));

    $wp_customize->add_control('sscb_button_border_radius', array(
        'label' => __('Button Border Radius (px)', 'sscb-plugin'),
        'section' => 'sscb_button_section',
        'type' => 'range',
        'input_attrs' => array(
            'min' => 0,
            'max' => 50,
            'step' => 1,
        ),
    ));
}
add_action('customize_register', 'sscb_register_customizer_settings');

// RGBA-Farbe mit Transparenz generieren
function sscb_generate_rgba($hex, $opacity) {
    $hex = str_replace("#", "", $hex);
    if (strlen($hex) == 6) {
        $rgb = array(
            hexdec(substr($hex, 0, 2)),
            hexdec(substr($hex, 2, 4)),
            hexdec(substr($hex, 4, 6))
        );
    } else {
        $rgb = array(0, 0, 0);
    }
    return 'rgba(' . implode(",", $rgb) . ',' . $opacity . ')';
}

function sscb_sanitize_opacity($opacity) {
    if (is_numeric($opacity) && $opacity >= 0 && $opacity <= 1) {
        return $opacity;
    }
    return 1;
}

// CSS in den Header einfÃ¼gen mit !important-Regeln
function sscb_custom_button_css() {
    $background_color = sscb_generate_rgba(get_theme_mod('sscb_button_background_color', '#ffd700'), get_theme_mod('sscb_button_background_opacity', 1));
    $hover_background_color = sscb_generate_rgba(get_theme_mod('sscb_button_hover_background_color', '#e55a4f'), get_theme_mod('sscb_button_hover_opacity', 1));
    ?>
    <style type="text/css">
        /* Fancy Continue Reading Button */
        a.more-link {
            display: inline-block;
            padding: 10px 20px !important;
            background-color: <?php echo $background_color; ?> !important;
            color: #ffffff !important;
            font-size: 16px !important;
            font-weight: bold !important;
            text-transform: uppercase !important;
            letter-spacing: 1px !important;
            text-decoration: none !important;
            border-radius: <?php echo get_theme_mod('sscb_button_border_radius', '9'); ?>px !important;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2) !important;
            transition: all 0.3s ease !important;
        }

        a.more-link:hover {
            background-color: <?php echo $hover_background_color; ?> !important;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3) !important;
            transform: translateY(-3px) !important;
        }

        /* Fancy Comment and Reply Buttons */
        #submit,
        .comment-reply-link {
            display: inline-block;
            padding: 10px 20px !important;
            background-color: <?php echo $background_color; ?> !important;
            color: #ffffff !important;
            font-size: 16px !important;
            font-weight: bold !important;
            text-transform: uppercase !important;
            letter-spacing: 1px !important;
            text-decoration: none !important;
            border-radius: <?php echo get_theme_mod('sscb_button_border_radius', '9'); ?>px !important;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2) !important;
            transition: all 0.3s ease !important;
            border: none !important;
            cursor: pointer !important;
        }

        #submit:hover,
        .comment-reply-link:hover {
            background-color: <?php echo $hover_background_color; ?> !important;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3) !important;
            transform: translateY(-3px) !important;
        }
    </style>
    <?php
}
add_action('wp_head', 'sscb_custom_button_css');
